    <!-- Câmera RGB -->
    <link name="camera">
    <!-- posicione a câmera  -->
    <pose>1 0 1 0 0 0</pose>

    <visual name="visual">
      <geometry><box><size>0.1 0.1 0.1</size></box></geometry>
      <material><diffuse>1 0 0 1</diffuse></material>
    </visual>

    <collision name="collision">
      <geometry><box><size>0.1 0.1 0.1</size></box></geometry>
    </collision>

    <sensor type="camera" name="camera_sensor">
      <!-- LIGAR-->
      <always_on>1</always_on>
      <update_rate>30</update_rate>

      <camera name="head">
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>800</width>
          <height>800</height>
          <format>R8G8B8</format>
        </image>

        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
      </camera>

      <topic>/camera/image_raw</topic>

    </sensor>
  </link>

    <joint name="camera_joint" type="fixed">
      <parent>base_link</parent>
      <child>camera</child>
    </joint>

    <!-- Rodas -->
    <link name="roda_esquerda">
      <pose>-0.7 0.6 0.4 -1.5707 0 0</pose>
      <inertial>
        <mass>1</mass>
        <inertia><ixx>0.043333</ixx><iyy>0.043333</iyy><izz>0.08</izz></inertia>
      </inertial>
      <visual name="visual">
     <pose>0 0 0 0 1.5708 1.5708</pose>
        <geometry>
          <mesh>
            <uri>file:///home/larissa/Gemeo_digital_MJV/src/carrinho_sdf_pkg/models/carrinho_sdf/meshes/Roda_Houverboard.STL</uri>
            <scale>0.005 0.005 0.005</scale>

          </mesh>
        </geometry>
        <material>
          <ambient>0.3 0.3 0.3 1</ambient>
          <diffuse>0.8 0.8 0.8 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
        </material>
      </visual>
      <collision name="collision">
        <geometry><cylinder><radius>0.4</radius><length>0.2</length></cylinder></geometry>
        <surface><friction><ode><mu>1.6</mu><mu2>1.6</mu2></ode></friction></surface>
      </collision>
    </link>

    <link name="roda_direita">
      <pose>-0.7 -0.6 0.4 -1.5707 0 0</pose>
      <inertial>
        <mass>1</mass>
        <inertia><ixx>0.043333</ixx><iyy>0.043333</iyy><izz>0.08</izz></inertia>
      </inertial>
      <visual name="visual">
        <pose>0 0 0 0 1.5708 1.5708</pose>
        <geometry>
          <mesh>
            <uri>file:///home/larissa/Gemeo_digital_MJV/src/carrinho_sdf_pkg/models/carrinho_sdf/meshes/Roda_Houverboard.STL</uri>
            <scale>0.005 0.005 0.005</scale>

          </mesh>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.3 0.3 0.3 1</specular>
        </material>
      </visual>
      <collision name="collision">
        <geometry><cylinder><radius>0.4</radius><length>0.2</length></cylinder></geometry>
        <surface><friction><ode><mu>1.6</mu><mu2>1.6</mu2></ode></friction></surface>
      </collision>
    </link>

    <joint name="junta_roda_esquerda" type="revolute">
      <parent>base_link</parent>
      <child>roda_esquerda</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit><lower>-1e16</lower><upper>1e16</upper></limit>
        <dynamics><damping>0.1</damping></dynamics>
      </axis>
    </joint>

    <joint name="junta_roda_direita" type="revolute">
      <parent>base_link</parent>
      <child>roda_direita</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit><lower>-1e16</lower><upper>1e16</upper></limit>
        <dynamics><damping>0.1</damping></dynamics>
      </axis>
    </joint>

    <!-- Rodinha dianteira -->
    <link name="caster">
      <pose>0.8 0 0.2 0 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.01</ixx><iyy>0.01</iyy><izz>0.01</izz>
        </inertia>
      </inertial>

      <visual name="visual">
        <pose>0 0 0 0 1.5708 1.5708</pose>
        <geometry>
          <mesh>
            <uri>file:///home/larissa/Gemeo_digital_MJV/src/carrinho_sdf_pkg/models/carrinho_sdf/meshes/Roda_Boba.STL</uri>
            <scale>0.005 0.005 0.005</scale>

          </mesh>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.4 0.4 0.4 1</diffuse>
          <specular>0.3 0.3 0.3 1</specular>
        </material>
      </visual>

      <collision name="collision">
        <geometry>
          <sphere><radius>0.2</radius></sphere>
        </geometry>
      </collision>
    </link>

    <joint name="caster_wheel" type="ball">
      <parent>base_link</parent>
      <child>caster</child>
    </joint>

    <!-- Diff drive -->
    <plugin filename="libgz-sim-diff-drive-system.so" name="gz::sim::systems::DiffDrive">
      <left_joint>junta_roda_esquerda</left_joint>
      <right_joint>junta_roda_direita</right_joint>
      <wheel_separation>1.2</wheel_separation>
      <wheel_radius>0.4</wheel_radius>
      <odom_publish_frequency>10</odom_publish_frequency>
      <topic>/cmd_vel</topic>
      <odom_topic>/odom</odom_topic>
    </plugin>

  </model>
</sdf>
