  <model name="carrinho_sdf">
    <!-- Chassi -->
    <link name="base_link">
      <pose>-0.7 0 0.65 0 0 0</pose>
      <inertial>
        <mass>1.14395</mass>
        <inertia>
          <ixx>0.095329</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.381317</iyy><iyz>0</iyz><izz>0.476646</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <pose>-1.3 5.3 -0.9 1.5708 0 0</pose>
        <geometry>
          <mesh>
            <uri>file:///home/larissa/Gemeo_digital_MJV/src/carrinho_sdf_pkg/models/carrinho_sdf/meshes/Chassi.STL</uri>
            <scale>0.005 0.005 0.005</scale>
          </mesh>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.25 0.25 0.25 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
        </material>

      </visual>

      <collision name="collision">
        <geometry><box><size>2.0 1.0 0.5</size></box></geometry>
      </collision>

      <!-- IMU -->
      <sensor name="imu_sensor" type="imu">
        <always_on>1</always_on>
        <update_rate>50</update_rate>
        <visualize>false</visualize>
        <topic>/imu</topic>
      </sensor>
    </link>

